{
  "compilerOptions": {
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "useDefineForClassFields": true
  },
  "include": ["playwright", "src", "./vitest-setup.ts"]
}
